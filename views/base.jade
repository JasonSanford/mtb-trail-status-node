doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    meta(property='og:url', content='http://mtbtrailstat.us')
    meta(property='og:title', content='MTB Trail Status sends you a text message when your favorite Charlotte mountain bike trails open or close.')
    meta(property='og:site_name', content='MTB Trail Status')
    meta(property='og:description', content='Use MTB Trail Status to set up text message alerts when your favorite Charlottte, NC mountain bike trails open or close. Be the first to know when it\'s time to hit the trail or when to cancel your group ride.')
    meta(property='og:image', content='/img/og.jpg')

    title Charlotte Mountain Bike Trail Statuses

    - if (map)
      link(rel='stylesheet', type='text/css', href='//api.tiles.mapbox.com/mapbox.js/v2.1.8/mapbox.css')

    link(rel='stylesheet', type='text/css', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Titillium+Web:400,700')
    block css
    link(rel='stylesheet', type='text/css', href='/css/app.css')
    script.
      var mtb = {};
  body(class=(bodyClass || ''))
    - if (!process.env.DEVELOPMENT)
      include ./includes/google_analytics.jade
    .top
      .container
        .header.clearfix
          nav
            ul.nav.nav-pills.pull-right
              li(role='presentation', class=(currentPage === 'home' ? 'active' : ''))
                a(href='/') Home
              li(role='presentation', class=(currentPage === 'about' ? 'active' : ''))
                a(href='/about') About
          h3.text-muted
            a(href='/') MTB Trail Status
    .container
      - if (messages.success)
        .alert.alert-success
          span= messages.success
    block content
    block footer
      .container
        footer.footer
          p MTB Trail Status, built by 
            a(href='mailto:jasonsanford@gmail.com') Jason Sanford
            |. Trail statuses from 
            a(href='/about') various sources
            |.
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
    - if (map)
      script(src='//api.tiles.mapbox.com/mapbox.js/v2.1.8/mapbox.js')
    block js
    script(src='/js/bundle.js')
