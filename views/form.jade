extends base

block css
  link(href='//gitcdn.github.io/bootstrap-toggle/2.2.0/css/bootstrap-toggle.min.css', rel='stylesheet')

block js
  script(src='//gitcdn.github.io/bootstrap-toggle/2.2.0/js/bootstrap-toggle.min.js')

block content
  .container
    h2 Set Up Your Messages

    p Select the trails for which you want to receive text message alerts for closures and openings.

    form.form-horizontal(method='post')
      each formTrail in formTrails
        .form-group
          .col-sm-10.col-sm-offset-2
            .checkbox
              label
                input(type='checkbox', data-toggle='toggle', data-size='small', name=formTrail.id, checked=formTrail.stored)
                | #{formTrail.displayName()}
      .form-group
        .col-sm-8.col-sm-offset-4.submit
          input.btn.btn-success(type='submit', value='Save')
